	<!-- fontawesome -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">

	<!--OWN FILES-->
	<script src="/javascripts/bduApp.js"></script>

	<link rel="stylesheet" href="/stylesheets/style.css">

</head>
<body>

