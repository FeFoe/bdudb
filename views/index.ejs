	<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarBDUDB" aria-controls="navbarBDUDB" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	</button>
	<div class="collapse navbar-collapse" id="navbarBDUDB">

		<div class="navbar-header">
			<a class="navbar-brand" href="#/profile">
				<span class="glyphicon glyphicon-cloud"></span>
				BDUDB
			</a>
		</div>
		<ul class="nav navbar-nav" ng-hide="!authenticated">
			<li>
				<a href="/#/profile" class="hidden-md">Profile</a>
				<a href="/#/profile" class="visible-md" data-toggle="collapse" data-target=".navbar-collapse">Profile</a>
			</li>
			<li>
				<a href="/#/tournaments" class="hidden-md">Tournaments</a>
				<a href="/#/tournaments" class="visible-md" data-toggle="collapse" data-target=".navbar-collapse">Tournaments</a>
			</li>
			<li>
				<a href="/#/anmeldungen" class="hidden-md">Reg Overview</a>
				<a href="/#/anmeldungen" class="visible-md" data-toggle="collapse" data-target=".navbar-collapse">Reg Overview</a>
			</li>
			<li ng-show="istVorstand">
				<a href="/#/vorstand" class="hidden-md">Vorstand</a>
				<a href="/#/vorstand" class="visible-md" data-toggle="collapse" data-target=".navbar-collapse">Vorstand</a>
			</li>
		</ul>

		<ul class="nav navbar-nav navbar-right hidden-md" ng-hide="!authenticated">
			<a href="/#/profile">
				<img class="nav-image" ng-src="http://debating.de/BDUDBdev/userpics/{{user.image}}" onerror="this.src='images/bdu_quad.png'" alt=""/>
			</a>
			<p class="navbar-right navbar-text">Signed in as {{user.vorname}}</p>
			<li>
				<a href="/#" class="hidden-md" ng-click="signout()"><span class="glyphicon glyphicon-log-out"></span> Logout</a>
