<!doctype html>
<html ng-app="bduApp">
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<title>BDU Members Area</title>

	<!-- load javascripts -->

	<!-- jQuery -->
	<script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>

	<!-- lodash -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.4/lodash.min.js"></script>

	<!-- tether.io -->
	<script src="https://cdn.rawgit.com/HubSpot/tether/v1.3.4/dist/js/tether.min.js"></script>

	<!-- angular -->
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular-route.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular-resource.min.js"></script>

	<!-- ngDialog -->
	<script src="/javascripts/ng-dialog/js/ngDialog.js"></script>
	<link rel="stylesheet" href="/javascripts/ng-dialog/css/ngDialog.min.css">
	<link rel="stylesheet" href="/javascripts/ng-dialog/css/ngDialog-theme-default.min.css">

	<!-- ng-file-upload -->
	<script src="/javascripts/ng-file-upload/ng-file-upload-shim.min.js"></script>
	<script src="/javascripts/ng-file-upload/ng-file-upload.min.js"></script>

	<!-- ng-img-crop -->
	<script src="/javascripts/ng-img-crop/js/ng-img-crop.js"></script>

	<!-- bootstrap -->
	<script src="/bootstrap/js/bootstrap.min.js"></script>
	<link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">

	<!-- timepicker -->
	<script type="text/javascript" src="/timepicker/jquery/jquery-1.8.3.min.js" charset="UTF-8"></script>
	<script type="text/javascript" src="/timepicker/bootstrap/js/bootstrap.min.js"></script>
	<!--<script type="text/javascript" src="/timepicker/js/bootstrap-datetimepicker.js" charset="UTF-8"></script>-->
	<link href="/timepicker/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
	<!--<link href="/timepicker/css/bootstrap-datetimepicker.min.css" rel="stylesheet" media="screen">-->

	<!-- fontawesome -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">

	<!--OWN FILES-->
	<script src="/javascripts/bduApp.js"></script>

	<link rel="stylesheet" href="/stylesheets/style.css">
	<link rel="stylesheet" href="/stylesheets/inline_help_style.css">

</head>
<body>

<!--++++++++++++++++++++++++++ NAVBAR ++++++++++++++++++++++++++-->

<nav class="navbar navbar-inverse navbar-fixed-top navbar-toggleable-md bg-inverse">
	<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarBDUDB" aria-controls="navbarBDUDB" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	</button>
	<div class="collapse navbar-collapse" id="navbarBDUDB">

		<div class="navbar-header hidden-xs hidden-sm">
			<a href="#/profile" class="navbar-left">
				<img class="nav-logo" ng-src="http://debating.de/BDUDBdev/bdu_white_logo.png" onerror="this.src='images/bdu_quad.png'" alt=""/>
			</a>
		</div>
		<ul class="nav navbar-nav" ng-hide="!authenticated">
			<li class="nav-item">
				<a href="/#/profile" class="hidden-xs hidden-sm">Profile</a>
				<a href="/#/profile" class="visible-xs visible-sm" data-toggle="collapse" data-target=".navbar-collapse">Profile</a>
			</li>
			<li class="nav-item">
				<a href="/#/tournaments" class="hidden-xs hidden-sm">
                    Tournaments
                    <span ng-show="newTournamentCount > 0" class="count">{{newTournamentCount}}</span>
                </a>
				<a href="/#/tournaments" class="visible-xs visible-sm" data-toggle="collapse" data-target=".navbar-collapse">Tournament</a>
			</li>
			<li class="nav-item">
				<a href="/#/anmeldungen" class="hidden-xs hidden-sm">Reg Overview</a>
				<a href="/#/anmeldungen" class="visible-xs visible-sm" data-toggle="collapse" data-target=".navbar-collapse">Reg Overview</a>
			</li>
			<li ng-show="istVorstand" class="nav-item dropdown">
				<a class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					Vorstand
				</a>
				<div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
					<a class="dropdown-item hidden-xs hidden-sm" href="/#/vorstand">Create Tournament</a>
					<a class="dropdown-item visible-xs visible-sm" href="/#/vorstand" data-toggle="collapse" data-target=".navbar-collapse">Create Tournament</a>
					<a class="dropdown-item hidden-xs hidden-sm" href="/#/finances">Finances</a>
					<a class="dropdown-item visible-xs visible-sm" href="/#/finances" data-toggle="collapse" data-target=".navbar-collapse">Finances</a>
				</div>
			</li>
		</ul>

		<ul class="nav navbar-nav navbar-right" ng-show="authenticated">
			<a href="/#/profile" class="hidden-xs hidden-sm hidden-md">
				<img class="nav-image" ng-src="http://debating.de/BDUDBdev/userpics/{{user.image}}" onerror="this.src='images/bdu_quad.png'" alt=""/>
			</a>
			<p class="navbar-right navbar-text">Signed in as {{user.vorname}}</p>

			<!--SCHULDEN-->
			<div class="hidden-xs hidden-sm hidden-md" style="margin-right: 15px">
				<span class="help-tip">
					<label class="currencySign" data-monetary-amount="{{personnelDebt | currency:'€'}}"></label>
					<p>This is how much you currently owe the BDU.</p>
				</span>
			</div>

			<li>
				<a href="/#/" class="hidden-xs hidden-sm" ng-click="signout()"><span class="glyphicon glyphicon-log-out"></span> Logout</a>
				<a href="/#/" class="visible-xs visible-sm" data-toggle="collapse" data-target=".navbar-collapse" ng-click="signout()"><span class="glyphicon glyphicon-log-out"></span> Logout</a>
			</li>
		</ul>

		<ul class="nav navbar-nav navbar-right" ng-show="!authenticated">
			<li><a href="/#/" class="hidden-xs hidden-sm"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
			<li><a href="/#/" class="visible-xs visible-sm" data-toggle="collapse" data-target=".navbar-collapse"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
			<li><a href="/#/signup" class="hidden-xs hidden-sm"><span class="glyphicon glyphicon glyphicon-user"></span> Signup</a></li>
			<li><a href="/#/signup" class="visible-xs visible-sm" data-toggle="collapse" data-target=".navbar-collapse"><span class="glyphicon glyphicon glyphicon-user"></span> Signup</a></li>
		</ul>

	</div>
</nav>

<div ng-view class="content"></div>


<!-- LINK TO BUG REPORT PAGE -->
<footer class="footer">
	<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 hidden-xs">
		<div>© Berlin Debating Union e.V., 2017</div>
	</div>
	<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 pull-right">
		<a href="/#/bugReport">Report a Problem</a>
	</div>
</footer>

<!-- SNACKBARS -->

<strong id="snackbarSuccess" class="alert alert-success"></strong>
<strong id="snackbarError" class="alert alert-danger"></strong>


</body>
</html>
