<!doctype html>
<html ng-app="bduApp">
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<title>BDU Members Area</title>

	<!-- load javascripts -->

	<!-- jQuery -->
	<script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>

	<!-- lodash -->
