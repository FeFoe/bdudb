<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<% include ../partials/head %>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.1/moment.min.js"></script>
	<style>
		.wellpadding {
			padding: 35px;
		}
	</style>
</head>
<body ng-app="myTApp">

	<% include ../partials/header %>

	<div class="container" ng-controller='TCtrl'>

		<div class="page-header text-center">
			<h1><span class="fa fa-comments"></span> My Tournaments</h1>
		</div>

		<div>
			<table class="table table-striped table-responsive">
				<thead>
					<tr>
						<th>Name</th>
						<th>Place</th>
						<th>Time</th>
						<th>Price</th>
						<th>Language</th>
						<th>Accommodation</th>
						<th>Format</th>
						<th>League</th>
						<th>Link</th>
						<th>Comments</th>
						<th>Role</th>
						<th>Teamname</th>
					</tr>
				</thead>
				<tbody>
					<tr ng-repeat="x in tournaments">
						<td>{{x.name}}</td>
						<td>{{x.ort}}</td>
						<td>{{x.startdate | date:'dd.MM.yyyy'}}<br>{{x.enddate | date:'dd.MM.yyyy'}}</td>
						<td>{{x.speakerprice}}</td>
						<td>{{x.language}}</td>
						<td>{{x.accommodation}}</td>
						<td>{{x.format}}</td>
						<td>{{x.league}}</td>
						<td>{{x.link}}</td>
						<td>{{x.comments}}</td>
						<td>{{x.role}}</td>
						<td>{{x.teamname}}</td>
					</tr>
				</tbody>
			</table>
		</div>

	</div>

	<footer>
		<% include ../partials/footer %>
	</footer>
</body>
</html>