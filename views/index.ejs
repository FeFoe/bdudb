<!doctype html>
<html ng-app="bduApp">
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<title>BDUDB</title>

	<!-- load javascripts -->

	<!-- jQuery -->
	<script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>

	<!-- lodash -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.4/lodash.min.js"></script>

	<!-- tether.io -->
	<script src="https://cdn.rawgit.com/HubSpot/tether/v1.3.4/dist/js/tether.min.js"></script>

	<!-- angular -->
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular-route.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular-resource.min.js"></script>

	<!-- ngDialog -->
	<script src="/ng-dialog/js/ngDialog.js"></script>
	<link rel="stylesheet" href="/ng-dialog/css/ngDialog.min.css">
	<link rel="stylesheet" href="/ng-dialog/css/ngDialog-theme-default.min.css">

	<!-- ng-file-upload -->
